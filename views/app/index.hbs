<div class="row">
  <div class="col s12 m12">
    <div class="card blue darken-1">
      <div class="card-content white-text">
        <p class="center-align">This is the index page</p>
      </div>
      <div class="card-action">
      </div>
    </div>
  </div>
</div>

{{#if posts}}
<ul>
  {{#each posts}}
  <div class="card">
    <div class="card-content">
      <a class="card-title" href="/post/{{id}}">
        {{ title }} -
        {{ author.name }} -
        {{mediatype}} -
        {{ likes }} Likes
      </a>
      <a href="/post/{{id}}"><img src="{{url}}" alt="" class="img-responsive"></a>
    </div>
    <div class="card-action">
      <a href="/user/{{ author.id }}" class="">{{ author.email }}</a>
      <span class="">{{ createdAt }}</span>
    </div>
  </div>
  {{/each}}
</ul>
{{/if}}