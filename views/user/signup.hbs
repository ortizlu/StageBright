<h2 class="mt-7 text-center text-light">Create a new account</h2>

<div class="container">
  {{#if message}}
  <div class="alert alert-danger">{{message}}</div>
  {{/if}}

  <form method="post" action="/user/signup" class="mt-6">
    <div class="form-group">
      <label for="name" class="text-light">Name</label>
      <input class="form-control" type="text" name="name" id="name">
    </div>

    <div class="form-group">
      <label for="email" class="text-light">Email</label>
      <input class="form-control" type="text" name="email" id="email">
    </div>

    <div class="form-group">
      <label for="email" class="text-light">Password</label>
      <input class="form-control" type="password" name="password" id="password">
    </div>

    <button class="btn btn-dark btn-lg center-btn mt-5 justify-content-center">Submit</button>
  </form>
</div>