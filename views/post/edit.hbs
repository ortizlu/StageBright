<section class="form-container">
  <h4>Edit Post</h4>
  <form action="/post/{{id}}?_method=PUT" method="post" class="Post-form">
    <input type="text" name="title" placeholder="title" value="{{title}}">
    <div class="input-field">
      <textarea name="description" cols="30" rows="10" placeholder="Description">{{description}}</textarea>
    </div>
    <select name="mediatype">
      <option value="photo">Photo</option>
      <option value="video">Video</option>
      <option value="song">Song</option>
      <option value="lyric">Lyric/Poem</option>
    </select>
    <input type="text" placeholder="url" name="url" value="{{url}}">
    </div>
    <div class="input-field">
      <input type="submit" value="Post" class="btn">
    </div>
  </form>

  <form action="/post/{{id}}?_method=DELETE" method="POST">
    <button>DELETE POST</button>
  </form>
</section>